
  <div class="firmlist">
    <h1>企業一覧</h1>

    <br>

    <%= will_paginate @firms %>
    <% @firms.each do |firm| %>
      <ul class="thumbnail">
        <li>
        <dl class="clearFix">
          <dt class="photo">
            <a href="#"><%= image_tag firm.logo.url(:thumb) %></a>
          </dt>
          <dt class="title">
            <strong><%= firm.name %></strong>
          </dt>
          <dd><%= firm.description %></dd>
          <%= link_to '詳細を見る', firm_path(firm) %>
          <%= link_to '気になる', '#' %>
        </dl>
        </li>
      </ul>
    <% end %>
  </div>
