<div class="sidebar"> 
  <div class="sidebar-profile">
    <ul class="profile-list">
      <li>
        <strong>User:</strong><br>
        <%= current_user.id %>
      </li>
      <li>
        <strong>Name:</strong><br>
        <% if @profile.name.blank? %>
          <%= "未登録" %>
        <% else %>
          <%= @profile.name %>
        <% end %>
      </li>
      <li>
        <strong>Age:</strong><br>
        <% if @profile.age.blank? %>
          <%= "未登録" %>
        <% else %>
          <%= @profile.age %>
        <% end %>
      </li>
      <li>
        <strong>University:</strong><br>
        <% if @profile.university.blank? %>
          <%= "未登録" %>
        <% else %>
          <%= @profile.university %>
        <% end %>
      </li>
      <li>
        <strong>Major:</strong><br>
        <% if @profile.major.blank? %>
          <%= "未登録" %>
        <% else %>
          <%= @profile.major %>
        <% end %>
      </li>
      <li>
        <strong>Phone:</strong><br>
        <% if @profile.phone.blank? %>
          <%= "未登録" %>
        <% else %>
          <%= @profile.phone %>
        <% end %>
      </li>
      <li>
        <strong>Bio:</strong><br>
        <% if @profile.bio.blank? %>
          <%= "未登録" %>
        <% else %>
          <%= @profile.bio %>
        <% end %>
      </li>    
    </ul>
  </div>

  <div class="sidebar-menu">
    <ul class="nl">
      <li>
        <% if current_page?(profile_path(current_user)) %>
          <%= link_to 'プロフィールを編集する', edit_profile_path(@profile) %>
        <% else %>
          <%= link_to '戻る', profile_path(current_user.id) %>
        <% end %>
      </li>
      <li><a href="#">メニュー項目1</a></li>
      <li><a href="#">メニュー項目2</a></li>
      <li><a href="#">メニュー項目3</a></li>
      <li><a href="#">メニュー項目4</a></li>
    </ul>
  </div>
</div>
